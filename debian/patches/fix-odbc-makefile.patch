Description: Use multiarch tuple when detecting odbc library path.
Origin: vendor
Forwarded: not-needed
Author: Cristian Greco <cristian@debian.org>

--- a/Data/ODBC/ODBC.make
+++ b/Data/ODBC/ODBC.make
@@ -11,13 +11,8 @@ ODBCINCDIR = /usr/include
 endif
 
 ifndef ODBCLIBDIR
-ifeq (0, $(shell test -d /usr/lib/$(OSARCH)-linux-gnu; echo $$?))
-ODBCLIBDIR = /usr/lib/$(OSARCH)-linux-gnu
-else ifeq (0, $(shell test -d /usr/lib64; echo $$?))
-ODBCLIBDIR = /usr/lib64
-else 
-ODBCLIBDIR = /usr/lib
-endif
+MULTIARCH_TUPLE = $(shell dpkg-architecture -qDEB_HOST_MULTIARCH)
+ODBCLIBDIR = /usr/lib/$(MULTIARCH_TUPLE)
 endif
 
 ifeq ($(LINKMODE),STATIC)
