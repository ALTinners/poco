From: zosrothko <zosrothko@orange.fr>
Date: Mon, 3 Apr 2017 17:06:02 +0200
Subject: [PATCH] Accumulate LD_LIBRARY_PATH

Avoid spurious warning when compiling a distro on Ubuntu amd64
---
 build/rules/global | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

--- a/build/rules/global
+++ b/build/rules/global
@@ -236,9 +236,9 @@
 endif
 
 ifeq ($(LIBPATH),$(POCO_BASE)/$(LIBDIR))
-LD_LIBRARY_PATH = $(LIBPATH)
+LD_LIBRARY_PATH += $(LIBPATH)
 else
-LD_LIBRARY_PATH = $(LIBPATH):$(POCO_BASE)/$(LIBDIR)
+LD_LIBRARY_PATH += $(LIBPATH):$(POCO_BASE)/$(LIBDIR)
 endif
 ifeq ($(POCO_HOST_OSNAME),Darwin)
 SET_LD_LIBRARY_PATH = DYLD_LIBRARY_PATH=$(LD_LIBRARY_PATH)
